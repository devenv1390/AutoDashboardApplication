<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:reflect="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:id="@+id/sp_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_title_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_recycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="100dp"
                        android:text="@string/recycle"
                        android:textColor="@color/main_text"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="100dp"
                        android:text="@string/power"
                        android:textAlignment="textEnd"
                        android:textColor="@color/main_text"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_power_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/pb_recycle"
                    app:layout_constraintStart_toEndOf="@+id/pb_recycle">

                    <ProgressBar
                        android:id="@+id/pb_recycle"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="65dp"
                        android:progress="50"
                        android:progressBackgroundTint="@color/recycle_background"
                        android:progressTint="@color/recycle"
                        android:rotationY="180"
                        app:layout_constraintBottom_toBottomOf="@+id/pb_power"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/pb_power" />

                    <ProgressBar
                        android:id="@+id/pb_power"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:progress="50"
                        android:progressBackgroundTint="@color/power_background"
                        android:progressTint="@color/power"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_space_progress"
                        app:layout_constraintStart_toStartOf="@+id/tv_space_progress"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_space_progress"
                        android:layout_width="5dp"
                        android:layout_height="142dp"
                        android:background="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/pb_recycle"
                        app:layout_constraintStart_toEndOf="@+id/pb_recycle"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/fl_reflect_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_power_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/power_title"
                        android:textColor="@color/main_text"
                        android:textSize="36sp" />

                    <com.qky.autodashboardapplication.ui.EdgeTransparentView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edge_position="bottom"
                        app:edge_width="300dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_power_recycle_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            app:layout_constraintEnd_toEndOf="@+id/pb_recycle"
                            app:layout_constraintStart_toEndOf="@+id/pb_recycle">

                            <ProgressBar
                                android:id="@+id/pb_recycle_copy"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="150dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="65dp"
                                android:progress="50"
                                android:progressBackgroundTint="@android:color/darker_gray"
                                android:progressTint="@color/recycle"
                                android:rotationY="180"
                                app:layout_constraintBottom_toBottomOf="@+id/pb_power_copy"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/pb_power_copy" />

                            <ProgressBar
                                android:id="@+id/pb_power_copy"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="150dp"
                                android:layout_height="65dp"
                                android:progress="50"
                                android:progressBackgroundTint="@android:color/darker_gray"
                                android:progressTint="@color/power"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_space_progress_copy"
                                app:layout_constraintStart_toStartOf="@+id/tv_space_progress_copy"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_space_progress_copy"
                                android:layout_width="5dp"
                                android:layout_height="70dp"
                                android:background="@color/white"
                                app:layout_constraintEnd_toEndOf="@+id/pb_recycle_copy"
                                app:layout_constraintStart_toEndOf="@+id/pb_recycle_copy"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.qky.autodashboardapplication.ui.EdgeTransparentView>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textColor="@color/main_text"
                    android:textSize="60sp"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textColor="@color/main_text"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/test" />
                <com.amap.api.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.amap.api.maps.MapView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.qky.autodashboardapplication.ui.ReflectTextView
                    android:id="@+id/tv_car_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/car_speed"
                    android:textAlignment="center"
                    android:textColor="@color/main_text"
                    android:textSize="200sp"
                    android:textStyle="bold"
                    reflect:reflectAlpha="120"
                    reflect:reflectHeightMultiple="0.3"
                    reflect:spacingValue="-70dp" />

                <TextView
                    android:id="@+id/tv_speed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/speed"
                    android:textAlignment="center"
                    android:textColor="@color/main_text"
                    android:textSize="30sp" />

                <com.qky.autodashboardapplication.ui.DrawableCenterTextView
                    android:id="@+id/dctv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@mipmap/ic_launcher"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/main_text"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_battery_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="@string/battery_empty"
                    android:textColor="@color/main_text"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/ll_remains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_remains"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/remains_text"
                        android:textColor="@color/main_text"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_remain_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/remains_num"
                        android:textAlignment="center"
                        android:textColor="@color/main_text"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tv_remains_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp"
                        android:text="@string/remains_unit"
                        android:textColor="@color/main_text"
                        android:textSize="24sp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_battery_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="@string/battery_full"
                    android:textAlignment="textEnd"
                    android:textColor="@color/main_text"
                    android:textSize="24sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_battery"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="700dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:progress="50"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/green" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>